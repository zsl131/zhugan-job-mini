<view class="page">
    <!-- <view class="page__hd">
        <view class="page__title">我的账户</view>
        <view class="page__desc">账户预览</view>
    </view> -->
    <view class="page__bd">
        
        <view class="weui-form-preview">
            <view class="weui-form-preview__hd">
                <view class="weui-form-preview__label">账户姓名</view>
                <view class="weui-form-preview__value_in-hd">{{wallet.name}}</view>
            </view>
            <view class="weui-form-preview__bd">
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">可查看招聘信息联系方式</view>
                    <view class="weui-form-preview__value">{{wallet.personalViewCount}} 次</view>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">可刷新自己简历使其靠前</view>
                    <view class="weui-form-preview__value">{{wallet.personalRefreshCount}} 次</view>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">------------------------------------------</view>
                    <view class="weui-form-preview__value"></view>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">可查看简历电话及视频</view>
                    <view class="weui-form-preview__value">{{wallet.companyViewCount}} 次</view>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">可刷新招聘信息使其靠前</view>
                    <view class="weui-form-preview__value">{{wallet.companyRefreshCount}} 次</view>
                </view>
            </view>
            <view class="weui-form-preview__ft">
                <navigator open-type="navigateBack" class="weui-form-preview__btn weui-form-preview__btn_default" hover-class="weui-form-preview__btn_active">返回</navigator>
                <navigator url='/pages/production/index' class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active">获得更多次数</navigator>
            </view>
        </view>
    </view>
</view>