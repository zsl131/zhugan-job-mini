<view class="page">
    <view class="weui-msg">
        <view class="weui-msg__icon-area">
            <icon type="warn" size="93"></icon>
        </view>
        <view class="weui-msg__text-area">
            <view class="weui-msg__title">操作失败</view>
            <view class="weui-msg__desc">{{message}}</view>
        </view>
        <view class="weui-msg__opr-area">
            <view class="weui-btn-area">
                <button class="weui-btn" type="primary" bindtap='mainOpt'>{{mainBtnText}}</button>
                <button class="weui-btn" type="default" wx:if="{{secondUrl}}" bindtap='secondOpt'>{{secondBtnText}}</button>
            </view>
        </view>
        <view class="weui-msg__extra-area">
            <view class="weui-footer">
                <view class="weui-footer__text">Copyright © {{year}} {{appName}}</view>
            </view>
        </view>
    </view>
</view>