<view class="page">
    <view class="weui-msg">
        <view class="weui-msg__icon-area">
            <icon type="success" size="93"></icon>
        </view>
        <view class="weui-msg__text-area">
            <view class="weui-msg__title">操作成功</view>
            <view class="weui-msg__desc">{{message}}</view>
        </view>
        <view class="weui-msg__opr-area">
            <view class="weui-btn-area">
                <button class="weui-btn" type="primary" bindtap='mainOpt'>恩，我知道了</button>
                <!-- <button class="weui-btn" type="default" wx:if="{{secondUrl}}" bindtap='secondOpt'>辅助操作</button> -->
            </view>
        </view>
        <view class="weui-msg__extra-area">
            <view class="weui-footer">
                <view class="weui-footer__text">Copyright © {{year}} {{appName}}</view>
            </view>
        </view>
    </view>
</view>