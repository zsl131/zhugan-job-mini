/* pages/resumeStore/index.wxss */
.no-data {
  text-align:center; padding-top:50px; color:#dadada;
}
.no-data .href {
  color:#1AAD16; padding-top:12px;
}

.single-resume {
  width:94%; height:60px; background:#fafafa; border-radius: 0px 25px 25px 0px; margin-top:12px;
}
.headimg {
  width:55px; height:55px;
}
.headimg image {
  width:100%; height:100%; border-radius: 30px; margin:2.5px 5px;
}

.cancel-icon {
  margin:20px 10px 0px 10px;
}

.personal-info {
 padding-left:15px; 
}
.base-info {
  float:left; width:100%; 
}
.base-info view {
  float:left; margin-right: 8px; color:#888888;
}
.base-info view.name {
  font-weight: bold; color:#000;
}
.personal-info .hope {
  float:left; width:100%; color:#444; 
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.personal-info .hope b {
  font-size:12px; padding:2px 4px; background:#e5e5e5; margin-right:3px;
}
.personal-info .contact {
  float:left; width:100%; margin-top:4px;font-size:14px; color:#444;
}